        <activity android:name=".ui.activity.material_classroom.MaterialClassRoomActivity" />
        <activity android:name=".ui.activity.detail_course.DetailCourseActivity" />
        <activity android:name=".ui.activity.search_course.SearchCourseActivity" />
        <activity
            android:name=".ui.activity.main_menu.MainMenu"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>