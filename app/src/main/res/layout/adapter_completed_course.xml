<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    cardCornerRadius="15dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_completed_classroom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/title_completed_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@string/medium_font"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Data Science"
                    android:textColor="@color/textColorGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/subtitle_completed_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@string/light_font"
                    android:padding="5dp"
                    android:text="Learn how data science "
                    android:textColor="@color/textColorLightGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_completed_classroom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/textColorLightGray"
                android:padding="10dp"
                android:text="@string/result"
                android:textAllCaps="false"
                android:textColor="@color/textColorWhite"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>