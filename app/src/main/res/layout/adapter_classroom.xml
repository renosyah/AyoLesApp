<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:id="@+id/layout_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_classroom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:textColor="@color/textColorGray"
                android:fontFamily="@string/medium_font"
                android:padding="5dp"
                android:text="Data Science"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subtitle_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/textColorLightGray"
                android:fontFamily="@string/light_font"
                android:padding="5dp"
                android:text="Learn how data science "
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>