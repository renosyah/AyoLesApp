<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:fontFamily="@string/medium_font"
            android:id="@+id/image_course_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:fontFamily="@string/medium_font"
            android:id="@+id/course_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/textColorGray"
            android:text="Data Science"
            android:textSize="24sp" />

        <TextView
            android:fontFamily="@string/light_font"
            android:id="@+id/category_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/textColorLightGray"
            android:text="Category : Science"
            android:textSize="16sp" />


        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@string/light_font"
                android:id="@+id/teach_by_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:maxLines="1"
                android:padding="5dp"
                android:text="By prof Reno"
                android:textSize="14sp" />

            <Button
                android:id="@+id/enroll_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimaryLight"
                android:fontFamily="@string/medium_font"
                android:padding="10dp"
                android:text="@string/enroll"
                android:textAllCaps="false"
                android:textColor="@color/textColorWhite"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>